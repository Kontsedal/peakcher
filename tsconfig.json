{
  "compilerOptions": {
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["dom", "es5", "scripthost", "es2015"]
  },
  "exclude": ["../node_modules"],
  "include": ["src"]
}
